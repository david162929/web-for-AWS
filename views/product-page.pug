        .all-layout
            section#product-content
                .content-left
                    img.product-main-image(src=`${arrayAll0}`, alt='product-main-image')
                .content-right
                    h2 #{arrayAll1}
                    p #{arrayAll2}
                    h3 TWD.#{arrayAll3}
                    ul
                        li
